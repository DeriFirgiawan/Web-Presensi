<%- include('./Layout/header.ejs'); %>

<section id="register" class="register">
  <div class="container">
    <div id="message-error"></div>
    <div class="jumbotron shadow">
      <h3 class="title text-center">Daftar Siswa</h3>
      <hr>
      <div class="form-register mt-4">
        <form action="/daftar" method="POST">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <input type="text" class="form-control" id="nama" name="nama" placeholder="Name Lengkap">
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <input type="text" class="form-control" id="username" name="username" placeholder="Username">
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <input type="email" class="form-control" id="email" name="email" placeholder="Email">
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <input type="text" class="form-control" id="nowa" name="nowa" placeholder="Nomor WhatsApp">
              </div>
            </div>

            <div class="col-md">
              <div class="form-group">
                <input type="text" class="form-control" id="alamat" name="alamat" placeholder="Alamat">
              </div>
            </div>
          </div>
          <div class="form-group">
            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
          </div>

          <div class="form-group">
            <input type="password" class="form-control" id="password2" name="password2"
              placeholder="Konfirmasi Password">
          </div>

          <div class="row">
            <div class="col-md">
              <div class="form-group">
                <select class="custom-select mr-sm-2" name="classRoom" id="classRoom">
                  <option selected>Jurusan</option>
                  <% listJurusan.forEach((kejuruan) => { %> 
                    <option name="classRoom" id="classRoom"><%= kejuruan.jurusan %></option>
                  <% }); %> 
                </select>
              </div>
            </div>
          </div>
          <input type="submit" value="Daftar" class="btn btn-success btn-block">

          <div class="register mt-3 text-center">
            Daftar sebagai pengajar?
            <a href="/pengajar/daftar">Saya pengajar</a>
            <br>
            Sudah punya akun?
            <a href="/">Masuk</a>
          </div>
        </form>
      </div>
    </div>
  </div>
  <section id="footer" class="footer">
    <footer class="text-light">Copyrigh&copy; <span id="years">2020</span> Deri Firgiawan . All Rights Reserved
    </footer>
  </section>
</section>
<%- include('./Layout/footer.ejs'); %>